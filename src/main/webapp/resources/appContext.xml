<?xml version="1.0" encoding="UTF-8"?>
<beans  xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:context="http://www.springframework.org/schema/context"
        xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">

    <!-- импорт musicPlayer.properties -->
    <context:property-placeholder location="musicPlayer.properties"/>

    <bean id="rockMusic" class="RockMusic"/>

    <bean id="music" class="ClassicMusic"/>

    <bean id="musicPlayer" class="MusicPlayer">
        <!-- внедрение зависимости через конструктор-->
        <constructor-arg ref="music"/>
        <!-- внедрение зависимости через сеттер (значение)-->
        <property name="name" value="MusicPlayer"/>
        <!-- внедрение зависимости через сеттер (значение из файла musicPlayer.properties)-->
        <property name="id" value="${musicPlayer.id}"/>
        <!-- внедрение зависимости через сеттер (bean)-->
        <property name="music" ref="rockMusic"/>
    </bean>

</beans>